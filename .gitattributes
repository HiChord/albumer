# Git LFS - Track large files in uploads/ directory
uploads/**/*.mp3 filter=lfs diff=lfs merge=lfs -text
uploads/**/*.wav filter=lfs diff=lfs merge=lfs -text
uploads/**/*.aiff filter=lfs diff=lfs merge=lfs -text
uploads/**/*.m4a filter=lfs diff=lfs merge=lfs -text
uploads/**/*.logic filter=lfs diff=lfs merge=lfs -text
uploads/**/*.logicx filter=lfs diff=lfs merge=lfs -text
uploads/**/*.zip filter=lfs diff=lfs merge=lfs -text

# Track any file in uploads/ over 10MB with LFS
uploads/**/* filter=lfs diff=lfs merge=lfs -text
